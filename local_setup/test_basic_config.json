{
    "agent_config": {
        "agent_name": "Basic Test Assistant",
        "agent_type": "other",
        "agent_welcome_message": "Hello! I'm a test assistant.",
        "tasks": [
            {
                "task_type": "conversation",
                "toolchain": {
                    "execution": "parallel",
                    "pipelines": [
                        [
                            "transcriber",
                            "llm",
                            "synthesizer"
                        ]
                    ]
                },
                "tools_config": {
                    "input": {
                        "format": "wav",
                        "provider": "twilio"
                    },
                    "transcriber": {
                        "provider": "deepgram",
                        "model": "nova-2",
                        "language": "en",
                        "stream": true,
                        "encoding": "linear16"
                    },
                    "llm_agent": {
                        "agent_type": "simple_llm_agent",
                        "agent_flow_type": "streaming",
                        "llm_config": {
                            "provider": "openai",
                            "model": "gpt-3.5-turbo",
                            "temperature": 0.7,
                            "request_json": false,
                            "max_tokens": 150
                        }
                    },
                    "synthesizer": {
                        "provider": "polly",
                        "provider_config": {
                            "voice": "Joanna",
                            "engine": "standard",
                            "language": "en-US"
                        },
                        "stream": true,
                        "buffer_size": 100.0,
                        "audio_format": "wav"
                    },
                    "output": {
                        "format": "wav",
                        "provider": "twilio"
                    }
                },
                "task_config": {
                    "hangup_after_silence": 10.0,
                    "interruption_backoff_period": 100,
                    "backchanneling": false,
                    "optimize_latency": true
                }
            }
        ]
    },
    "agent_prompts": {
        "task_1": {
            "system_prompt": "You are a helpful assistant. Keep responses brief and conversational."
        }
    }
}
