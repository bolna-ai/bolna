{
    "agent_config": {
        "agent_name": "Sarvam Hindi Assistant (Polly Voice)",
        "agent_type": "other",
        "agent_welcome_message": "नमस्ते! मैं आपकी कैसे मदद कर सकता हूं?",
        "tasks": [
            {
                "task_type": "conversation",
                "toolchain": {
                    "execution": "parallel",
                    "pipelines": [
                        [
                            "transcriber",
                            "llm",
                            "synthesizer"
                        ]
                    ]
                },
                "tools_config": {
                    "input": {
                        "format": "wav",
                        "provider": "twilio"
                    },
                    "transcriber": {
                        "provider": "sarvam",
                        "model": "saarika:v2.5",
                        "language": "hi-IN",
                        "stream": false,
                        "encoding": "linear16"
                    },
                    "llm_agent": {
                        "agent_type": "simple_llm_agent",
                        "agent_flow_type": "streaming",
                        "llm_config": {
                            "provider": "openai",
                            "model": "gpt-4",
                            "temperature": 0.7,
                            "request_json": false,
                            "max_tokens": 150
                        }
                    },
                    "synthesizer": {
                        "provider": "polly",
                        "provider_config": {
                            "voice": "Aditi",
                            "engine": "standard",
                            "language": "hi-IN"
                        },
                        "stream": true,
                        "buffer_size": 100.0,
                        "audio_format": "wav"
                    },
                    "output": {
                        "format": "wav",
                        "provider": "twilio"
                    }
                },
                "task_config": {
                    "hangup_after_silence": 10.0,
                    "interruption_backoff_period": 100,
                    "backchanneling": false,
                    "optimize_latency": true
                }
            }
        ]
    },
    "agent_prompts": {
        "task_1": {
            "system_prompt": "You are a helpful multilingual assistant fluent in Hindi and English. Always respond in the same language the user is speaking. If they speak Hindi, respond in Hindi. If they speak English, respond in English. Be natural and conversational."
        }
    }
}
